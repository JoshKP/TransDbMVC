@{
    ViewBag.Title = "Home Page";
}



<!-- Carousel Start -->
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div id="carousel" class="carousel slide" data-interval="4000" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carousel" data-slide-to="0" class="active"></li>
                    <li data-target="#carousel" data-slide-to="1"></li>
                    <li data-target="#carousel" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="item active">
                        <img src="~/Content/Assets/PayPal.png" class="img-responsive" />
                        <div class="carousel-caption">
                            <h1></h1>
                        </div>
                    </div>
                    <div class="item">
                        <img src="~/Content/Assets/CustomerText.png" class="img-responsive" />
                        <div class="carousel-caption">
                            <h1></h1>
                        </div>
                    </div>
                    <div class="item">
                        <img src="~/Content/Assets/Cloud.png" class="img-responsive" />
                        <div class="carousel-caption">
                            <h1></h1>
                        </div>
                    </div>
                </div>
                <a href="#carousel" class="carousel-control left" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                </a>
                <a href="#carousel" class="carousel-control right" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right"></span>
                </a>
            </div>
        </div>
    </div>
</div>
<!-- Carousel End -->









<div class="row">
    <div class="col-md-4">
        <h2>Products</h2>
        <p>@Html.ActionLink("Products", "Index", "Product", null, new { @class = "btn btn-primary btn-large" })</p>
    </div>
    <div class="col-md-4">
        <h2>Customers</h2>
        <p>@Html.ActionLink("Customers", "Index", "Customer", null, new { @class = "btn btn-primary btn-large" })</p>
    </div>
    <div class="col-md-4">
        <h2>Suppliers</h2>
        <p>@Html.ActionLink("Suppliers", "Index", "Supplier", null, new { @class = "btn btn-primary btn-large" })</p>

    </div>
</div>