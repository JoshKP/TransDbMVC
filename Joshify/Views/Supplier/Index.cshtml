@model IEnumerable<TransactionManagement.MVC.Models.SupplierModels.SupplierListItem>

@{
    ViewBag.Title = "Index";
}

<h2 style="text-align: center;">Suppliers List</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@if (TempData.ContainsKey("SaveResult"))
{
    <div class="alert alert-success fade in" role="alert">

        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        @TempData["SaveResult"]
    </div>
}

<ul class="nav nav-tabs">
    <li class="active"><a data-toggle="tab" href="#First">First</a></li>
    <li><a data-toggle="tab" href="#Second">Second</a></li>
    <li>@Html.ActionLink("Suppliers", "Index", "Supplier")</li>
</ul>

<div class="tab-content">
    <div id="First" class="tab-pane fade in active">First</div>
    <div id="Second" class="tab-pane fade">Second</div>
    <div id="Third" class="tab-pane fade">Third</div>
</div>

<div class="row">
    @foreach (var item in Model)
    {

        <div class="supplier-card col-md-2">
            <div class="card">
                <img class="card-img-top" src="/Supplier/RetrieveImage/@item.SupplierId" height="100" width="100" alt="Card image cap">
                @Html.DisplayFor(modelItem => item.SupplierId)
                @Html.DisplayFor(modelItem => item.Company)
                @Html.DisplayFor(modelItem => item.SalesRep)
                @Html.DisplayFor(modelItem => item.Phone)
                @Html.DisplayFor(modelItem => item.Address)
                @Html.DisplayFor(modelItem => item.Category)
                @Html.DisplayFor(modelItem => item.Notes)

                <div>
                    @Html.ActionLink("Edit", "Edit", new { id = item.SupplierId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.SupplierId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.SupplierId })
                </div>
            </div>
        </div>
    }
</div>

